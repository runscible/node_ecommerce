
<% include ../partials/header.ejs %>

<title>signup page</title>
<body background="static/img/pexels-photo-45055.jpeg">
  <form class="col s4" method="post">
      <div class="row">
        <div class="input-field col ">
          <input placeholder="name" id="name" type="text" name="name">
          <label for="first_name">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col ">
          <input id="password" type="password" name="password">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col ">
          <input id="password_2" type="password" >
          <label for="password">Repeat Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col ">
          <input id="email" type="email" name="email">
          <label for="email">Email</label>
        </div>
      </div>
        <button type="submit" id="reg" class="btn btn-waves-effect waves-light">register
       <i class="fa fa-paper-plane" aria-hidden="true"></i>
    </button>
      
    </form>
     
  <!--error modal -->
  <div class="row" id="content_form" >
    <% if (errors.length > 0 ){%>
    <div class="row close_error_email">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">error</span>
              <p class="close_error_email" >these email is already in use</p>
            </div>
            <div class="card-action">
              <a class="close_error_email" href="#">close</a>
            </div>
          </div>
        </div>
      </div>
    <% }%>
   <!--error modal -->
</div>

    
</body>
<% include ../partials/footer.ejs %>